<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginFieldText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/login_field_font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
    </style>

    <style name="ProfileFieldHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/profile_header_font_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileFieldContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/profile_content_font_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/error_font_size</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="RepositoryItemName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/repository_name_font_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsItemName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/settings_item_name_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsItemDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/settings_item_description_font_size</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
</resources>
