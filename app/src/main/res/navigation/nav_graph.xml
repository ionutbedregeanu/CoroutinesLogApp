<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.coroutineslogapp.ui.splash.SplashFragment"
        android:label="activity_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.coroutineslogapp.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.coroutineslogapp.ui.profile.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/action_profileFragment_to_repositoriesFragment"
            app:destination="@id/repositoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/repositoriesFragment"
        android:name="com.coroutineslogapp.ui.repositories.RepositoriesFragment"
        android:label="RepositoriesFragment">
        <action
            android:id="@+id/action_repositoriesFragment_to_repositoryDetailsFragment"
            app:destination="@id/repositoryDetailsFragment" />
        <action
            android:id="@+id/action_repositoriesFragment_to_RepositorySettingsFragment"
            app:destination="@id/RepositorySettingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/repositoryDetailsFragment"
        android:name="com.coroutineslogapp.ui.repositories.RepositoryDetailsFragment"
        android:label="RepositoryDetailsFragment">
        <argument
            android:name="repositoryId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/RepositorySettingsFragment"
        android:name="com.coroutineslogapp.ui.repositories.RepositorySettingsFragment"
        android:label="RepositorySettingsFragment" />
</navigation>
